<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guides.labexer1_gradecomputation.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz 1"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="43dp"
        android:id="@+id/T1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz 2"
        android:textSize="25dp"
        android:layout_below="@+id/T1"
        android:layout_alignStart="@+id/T1"
        android:layout_marginTop="24dp"
        android:id="@+id/T2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seatworks"
        android:textSize="25dp"
        android:layout_below="@+id/T2"
        android:layout_alignStart="@+id/T2"
        android:layout_marginTop="24dp"
        android:id="@+id/T3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lab Exercises"
        android:textSize="25dp"
        android:layout_below="@+id/T3"
        android:layout_alignStart="@+id/T3"
        android:layout_marginTop="24dp"
        android:id="@+id/T4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major Exam"
        android:textSize="25dp"
        android:layout_below="@+id/T4"
        android:layout_alignStart="@+id/T4"
        android:layout_marginTop="24dp"
        android:id="@+id/T5"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/T5"
        android:text="COMPUTE"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:id="@+id/BTN1"
        android:onClick="compute"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/EDT1"
        android:layout_alignTop="@+id/T1"
        android:layout_alignStart="@+id/EDT2" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:id="@+id/EDT2"
        android:layout_alignBaseline="@+id/T2"
        android:layout_alignBottom="@+id/T2"
        android:layout_toEndOf="@+id/T4" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/EDT3"
        android:layout_alignTop="@+id/T3"
        android:layout_alignStart="@+id/EDT2" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/EDT4"
        android:layout_alignTop="@+id/T4"
        android:layout_alignStart="@+id/EDT3" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/EDT5"
        android:layout_alignTop="@+id/T5"
        android:layout_alignStart="@+id/EDT4" />

</RelativeLayout>
